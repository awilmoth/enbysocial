<RegisterScreen>:
    username_field: username_field
    email_field: email_field
    password_field: password_field
    confirm_password_field: confirm_password_field

    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(20)

        MDBoxLayout:
            size_hint_y: 0.2
            MDLabel:
                text: "Create Account"
                halign: "center"
                font_style: "H4"
                theme_text_color: "Primary"

        MDBoxLayout:
            orientation: 'vertical'
            adaptive_height: True
            spacing: dp(10)
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint_x: 0.8
            
            MDTextField:
                id: username_field
                hint_text: "Username"
                helper_text: "Choose a unique username"
                helper_text_mode: "on_error"
                icon_right: "account"
                required: True
                
            MDTextField:
                id: email_field
                hint_text: "Email"
                helper_text: "Enter your email address"
                helper_text_mode: "on_error"
                icon_right: "email"
                required: True
                
            MDTextField:
                id: password_field
                hint_text: "Password"
                helper_text: "At least 8 characters"
                helper_text_mode: "on_error"
                icon_right: "eye-off"
                required: True
                password: True
                
            MDTextField:
                id: confirm_password_field
                hint_text: "Confirm Password"
                helper_text: "Passwords must match"
                helper_text_mode: "on_error"
                icon_right: "eye-off"
                required: True
                password: True
                
            MDRaisedButton:
                text: "Register"
                size_hint_x: 1
                on_release: root.register()
                md_bg_color: app.theme_cls.primary_color
                
            MDTextButton:
                text: "Already have an account? Login here"
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color
                size_hint_x: 1
                on_release: root.go_to_login()

        Widget:
            size_hint_y: 0.2

    MDIconButton:
        icon: "arrow-left"
        pos_hint: {"top": 0.95, "left": 0.02}
        on_release: root.go_to_login()
        theme_text_color: "Primary"
