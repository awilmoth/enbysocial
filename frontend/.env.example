# API Configuration
API_URL=http://localhost:8000
API_VERSION=v1

# App Configuration
APP_NAME=Enby Social
APP_VERSION=1.0.0
DEBUG=True

# Location Settings
DEFAULT_RADIUS_MILES=50
MAX_RADIUS_MILES=100

# WebSocket Configuration
WS_RECONNECT_INTERVAL=5000  # milliseconds

# File Upload Settings
MAX_IMAGE_SIZE=5242880  # 5MB in bytes
ALLOWED_IMAGE_TYPES=image/jpeg,image/png

# Cache Settings
PROFILE_CACHE_TIME=3600  # seconds
MESSAGE_CACHE_TIME=300   # seconds

# Theme Configuration
PRIMARY_COLOR=#6200EE
SECONDARY_COLOR=#03DAC6
BACKGROUND_COLOR=#FFFFFF
ERROR_COLOR=#B00020

# iOS Specific
IOS_BUNDLE_IDENTIFIER=com.enbysocial.app
IOS_DEPLOYMENT_TARGET=14.0

# Android Specific
ANDROID_PACKAGE_NAME=com.enbysocial.app
ANDROID_MIN_SDK_VERSION=21
ANDROID_TARGET_SDK_VERSION=33

# Analytics and Crash Reporting (Optional)
ENABLE_ANALYTICS=False
ENABLE_CRASH_REPORTING=False
