# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here

# API Configuration
API_URL=http://localhost:8000
API_VERSION=v1

# WebSocket Configuration
WS_RECONNECT_INTERVAL=5000  # milliseconds
WS_MAX_RECONNECT_ATTEMPTS=5

# App Configuration
APP_NAME=Enby Social
APP_VERSION=1.0.0

# UI Configuration
WINDOW_WIDTH=900
WINDOW_HEIGHT=600

# Location Settings
DEFAULT_RADIUS_MILES=50
MAX_RADIUS_MILES=100

# File Upload Settings
MAX_IMAGE_SIZE=5242880  # 5MB in bytes
ALLOWED_IMAGE_TYPES=image/jpeg,image/png

# Cache Settings
STATIC_CACHE_TIMEOUT=3600  # 1 hour in seconds
PROFILE_CACHE_TIMEOUT=300  # 5 minutes in seconds

# Theme Configuration
PRIMARY_COLOR=#6200EE
SECONDARY_COLOR=#03DAC6
BACKGROUND_COLOR=#FFFFFF
ERROR_COLOR=#B00020

# Security Settings
CORS_ORIGINS=http://localhost:5000,http://127.0.0.1:5000
SECURE_COOKIES=false  # Set to true in production
SESSION_COOKIE_SECURE=false  # Set to true in production
REMEMBER_COOKIE_SECURE=false  # Set to true in production

# Logging Configuration
LOG_LEVEL=DEBUG  # Set to INFO or WARNING in production
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Performance Settings
GUNICORN_WORKERS=4
GUNICORN_THREADS=4
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50

# Analytics and Monitoring (Optional)
ENABLE_ANALYTICS=False
ANALYTICS_ID=
ENABLE_SENTRY=False
SENTRY_DSN=
